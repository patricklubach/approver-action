{
  "name": "approver",
  "description": "approver action",
  "author": "patricklubach",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "env": "docker run -it --rm -v $PWD:/workspace --entrypoint scripts/ci.sh --workdir /workspace node:23",
    "dev": "npm ci --include=dev && npm run bundle",
    "bundle": "npm run format:write && npm run package",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "package": "npx ncc build src/index.js -o dist --source-map --license licenses.txt",
    "test:local": "act -W .github/workflows/ci.yml -s GITHUB_TOKEN=\"$(gh auth token)\""
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "dependencies": {
    "@actions/core": "^1.11",
    "@octokit/action": "^7.0",
    "@octokit/core": "^6.1",
    "octokit": "^4.0",
    "yaml": "^2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "jest": "^29.7.0"
  },
  "type": "module"
}