{
  "name": "reviewers",
  "description": "reviewers action",
  "author": "patricklubach",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "bundle": "npm run format:write && npm run package",
    "dev": "npm ci --include=dev && npm run bundle",
    "env": "docker run -it --rm -v $PWD:/workspace --entrypoint scripts/ci.sh --workdir /workspace node:23",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "package": "npx ncc build src/index.js -o dist --source-map --license licenses.txt",
    "test:local:check": "act pull_request -e event.pull_request_example.json -W .github/workflows/check_reviews.yaml -j 'check_reviews' -s GITHUB_TOKEN=\"$(gh auth token)\" --input-file action.inputs",
    "update:lock": "npm update --save --include=dev"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@octokit/core": "^6.1.3",
    "@octokit/types": "^13.8.0",
    "octokit": "^4.1.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "jest": "^29.7.0",
    "typescript": "^5.7.3"
  },
  "type": "module"
}
